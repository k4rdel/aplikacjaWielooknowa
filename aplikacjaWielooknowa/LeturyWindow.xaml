<Window x:Class="aplikacjaWielooknowa.LeturyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aplikacjaWielooknowa"
        mc:Ignorable="d"
        Title="Nowa lektura" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Column="0" Background="AliceBlue">
            <Label>Tytuł:</Label>
            <TextBox x:Name="tytul" Text="{Binding Path=Tytul}"/>
            <Label>Autor:</Label>
            <TextBox x:Name="autor" Text="{Binding Path=Autor}"/>
            <Label>Klasa:</Label>
            <ComboBox x:Name="klasa" Text="{Binding Klasa}">
                
            </ComboBox>
            <Button x:Name="btnOK" IsDefault="True" Click="btnOK_Click">OK</Button>
            <Button x:Name="btnCancel" IsCancel="True">Anuluj</Button>
        </StackPanel>
    </Grid>
</Window>
